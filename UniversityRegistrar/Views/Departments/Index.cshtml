@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<h1>Departments</h1>

@if (@Model.Count == 0)
{
  <h3>No departments have been added yet.</h3>
}

else
{
  <ul>
  @foreach (Department department in Model)
    {
      <li>@Html.ActionLink($"{department.Name}", "Details", new { id = department.DepartmentId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add a new department", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>