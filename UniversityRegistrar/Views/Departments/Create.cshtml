@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Department;

<h4>Add a new department</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, new {@class="form-label"})
  @Html.TextBoxFor(model => model.Name, new {@class="form-control"})

  @Html.LabelFor(model => model.Abbreviation, new {@class="form-label"})
  @Html.TextBoxFor(model => model.Abbreviation, new {@class="form-control"})

  <input type="submit" value="Add new department" class="btn btn-outline-primary" />
}
<p>@Html.ActionLink("Show all departments", "Index")</p>